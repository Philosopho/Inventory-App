<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditorActivity">

        <TextView
            android:id="@+id/tv_productNameLabel"
            android:text="@string/product_name"
            android:labelFor="@id/et_productName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_productName"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_weight="3"
            style="@style/header"
            />
        <EditText
            android:id="@+id/et_productName"
            android:inputType="text"
            android:autofillHints="Amazon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_productNameLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="7"
            style="@style/edit_text"
            />

        <TextView
            android:id="@+id/tv_priceLabel"
            android:text="@string/price"
            android:labelFor="@id/et_price"
            app:layout_constraintTop_toBottomOf="@id/tv_productNameLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_price"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_weight="3"
            style="@style/header"
            />
        <EditText
            android:id="@+id/et_price"
            android:inputType="numberDecimal"
            android:autofillHints="3.50"
            app:layout_constraintTop_toBottomOf="@id/et_productName"
            app:layout_constraintStart_toEndOf="@id/tv_priceLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="7"
            style="@style/edit_text"
            />

        <TextView
            android:id="@+id/tv_quantityLabel"
            android:text="@string/quantity"
            android:labelFor="@id/et_quantity"
            app:layout_constraintTop_toBottomOf="@id/tv_priceLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_quantity"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_weight="3"
            style="@style/header"
            />
        <EditText
            android:id="@+id/et_quantity"
            android:inputType="number"
            android:autofillHints="12"
            app:layout_constraintTop_toBottomOf="@id/et_price"
            app:layout_constraintStart_toEndOf="@id/tv_quantityLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="7"
            style="@style/edit_text"
            />

        <TextView
            android:id="@+id/tv_supplierNameLabel"
            android:text="@string/supplier_name"
            android:labelFor="@id/et_supplierName"
            app:layout_constraintTop_toBottomOf="@id/tv_quantityLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_supplierName"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_weight="3"
            style="@style/header"
            />

        <EditText
            android:id="@+id/et_supplierName"
            style="@style/edit_text"
            android:layout_marginBottom="16dp"
            android:autofillHints="Amazon"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/et_supplierPhoneNumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="7"
            app:layout_constraintStart_toEndOf="@id/tv_supplierNameLabel"
            app:layout_constraintTop_toBottomOf="@id/et_quantity"
            app:layout_constraintVertical_bias="0.47000003" />

        <TextView
            android:id="@+id/tv_supplierPhoneNumberLabel"
            android:text="@string/supplier_phone_number"
            android:labelFor="@id/et_supplierPhoneNumber"
            app:layout_constraintTop_toBottomOf="@id/tv_supplierNameLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_supplierPhoneNumber"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_weight="3"
            style="@style/header"
            />

        <EditText
            android:id="@+id/et_supplierPhoneNumber"
            style="@style/edit_text"
            android:layout_marginTop="16dp"
            android:autofillHints="(555)555-5555"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="7"
            app:layout_constraintStart_toEndOf="@id/tv_supplierPhoneNumberLabel"
            app:layout_constraintTop_toBottomOf="@id/et_supplierName"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>